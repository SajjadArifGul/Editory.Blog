@model Editory.Blog.Areas.Dashboard.ViewModels.PostsListingViewModels

@if (Model.Posts != null && Model.Posts.Count > 0)
{
    <table class="table table-hover m-0">
        <thead class="thead-light">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Summary
                </th>
                <th>
                    Date
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        @post.Title.IfNullOrEmptyShowAlternative("-")
                    </td>
                    <td>
                        @post.Summary.IfNullOrEmptyShowAlternative("-")
                    </td>
                    <td>
                        @post.DateTime.ToString().IfNullOrEmptyShowAlternative("-")
                    </td>
                    <td>
                        <button class="editButton btn btn-primary">
                            <i class="fas fa-edit"></i>
                            Edit
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    if (Model.Pager != null && Model.Pager.TotalPages > 1)
    {
        <nav class="mt-2">
            <ul class="pagination justify-content-center">

                @if (Model.Pager.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Posts(Model.SearchTerm, Model.PostStatus, Model.Pager.CurrentPage - 1)">Previous</a>
                    </li>
                }

                @for (int page = Model.Pager.StartPage; page < Model.Pager.EndPage + 1; page++)
                {
                    var active = page == Model.Pager.CurrentPage ? "active" : string.Empty;

                    <li class="page-item @active">
                        <a class="page-link" href="@Url.Posts(Model.SearchTerm, Model.PostStatus, page)">
                            @page
                        </a>
                    </li>
                }

                @if (Model.Pager.CurrentPage == Model.Pager.EndPage)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Posts(Model.SearchTerm, Model.PostStatus, Model.Pager.CurrentPage + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }

    <script>
	$(".editButton").click(function () {
		$.ajax({
			url: "@Url.EditAction("Configurations")",
			method: "get",
			data: {
				Key: $(this).attr("data-id")
			}
		}).done(function (response) {
			$("#contentArea").html(response);
			$('#formModal').modal('toggle');
		});
	});
    </script>

}
else
{
    <div class="alert alert-warning rounded-0 m-0" role="alert">
        No Posts found.
    </div>
}